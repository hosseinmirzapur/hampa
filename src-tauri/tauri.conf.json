{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "hampa-running-companion",
  "version": "0.1.0",
  "identifier": "com.hampa.runningcompanion",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Hampa Running Companion",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: http://localhost:3000; img-src 'self' asset: https://asset.localhost data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' http://localhost:3000 ws://localhost:3000;",
      "allowlist": {
        "all": false,
        "fs": {
          "all": false,
          "readFile": true,
          "writeFile": true,
          "scope": [
            "$APP/*",
            "$APPCONFIG/*",
            "$APPDATA/*",
            "$APPLOCALDATA/*",
            "$RESOURCE/*"
          ]
        },
        "http": {
          "all": true,
          "scope": [
            "http://localhost:3000/*"
          ]
        },
        "notification": {
          "all": true
        },
        "shell": {
          "all": false,
          "open": true
        },
        "window": {
          "all": true
        },
        "dialog": {
          "all": true
        },
        "path": {
          "all": true
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
